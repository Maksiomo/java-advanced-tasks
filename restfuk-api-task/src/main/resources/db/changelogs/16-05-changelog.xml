<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="initial-create" author="maksiomo" context="prod,test">
        <createTable tableName="client_data">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_client_data"/>
            </column>
            <column name="first_name" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(32)"/>
            <column name="gender" type="VARCHAR(8)"/>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="registration_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_date" type="DATETIME"/>
        </createTable>
        <createTable tableName="event_data">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_event_data"/>
            </column>
            <column name="client_id" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="event" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="maksiomo" id="autoIncrementEvents"  context="prod,test">  
        <addAutoIncrement
            columnDataType="BIGINT"
            columnName="id" 
            incrementBy="1"
            startWith="1"
            tableName="event_data"/>  
    </changeSet>

    <changeSet author="maksiomo" id="autoIncrementClients"  context="prod,test">  
        <addAutoIncrement
            columnDataType="BIGINT"
            columnName="id" 
            incrementBy="1"
            startWith="1"
            tableName="client_data"/>  
    </changeSet>

    <changeSet id="insert-data" author="maksiomo" context="test">
        <insert tableName="client_data">
            <column name="id" value="1"/>
            <column name="first_name" value="Максим"/>
            <column name="last_name" value="Голанов"/>
            <column name="middle_name" value="Александрович"/>
            <column name="gender" value="MALE"/>
            <column name="birth_date" valueDate = "2002-08-03"/>
            <column name="phone_number" value="+79608319649"/>
            <column name="email" value="maksim@golanov.ru"/>
            <column name="registration_date" valueDate = "2022-05-16"/>
        </insert>
    </changeSet>
</databaseChangeLog>